# Google API (optional, only if USE_GOOGLE_APIS=true)
# GOOGLE_API_KEY=your_google_api_key_here

# Feature Flags (Cost Reduction)
# Set to false to use free alternatives (Overpass API + deep-translator)
# Set to true to use Google Services (requires GOOGLE_API_KEY)
USE_GOOGLE_PLACES=false
USE_GOOGLE_TRANSLATE=false

# Database Configuration
DATABASE_PATH=database.db
TEST_DATABASE_PATH=test.db

# Application Settings
PRODUCTION=true
LOG_FILE=logging.txt
LOG_LEVEL=DEBUG

# POI Search Configuration
POI_SEARCH_RADIUS=2000
POI_SEARCH_PROVIDER=overpass  # Options: overpass, google

# Translation Configuration
TRANSLATION_BATCH_SIZE=50
TRANSLATION_SOURCE_LANG=it
TRANSLATION_TARGET_LANG=da
