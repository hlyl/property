# Test Environment Configuration
# Used for running tests with pytest

# Feature Flags - Use free services for testing
USE_GOOGLE_PLACES=false
USE_GOOGLE_TRANSLATE=false

# Database - Use test database
DATABASE_PATH=test.db
TEST_DATABASE_PATH=test.db

# Application Settings
PRODUCTION=false
LOG_FILE=test_logging.txt
LOG_LEVEL=DEBUG

# POI Search Configuration
POI_SEARCH_RADIUS=2000
POI_SEARCH_PROVIDER=overpass

# Translation Configuration
TRANSLATION_BATCH_SIZE=50
TRANSLATION_SOURCE_LANG=it
TRANSLATION_TARGET_LANG=da

# Test-specific flags
# Set to true to skip slow network tests (Overpass API)
SKIP_OVERPASS_TESTS=false
